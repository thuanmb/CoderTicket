<!DOCTYPE html>
<html>
<head>
  <title>Coder Tickets</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <%= link_to 'Coder Ticket', root_path, class: 'navbar-brand' %>

    <ul class="nav navbar-nav">
      <li class="nav-item">
        <% if signed_in? %>
          <%= link_to 'Logout', logout_path, class: 'nav-link' %>
        <% else %>
          <%= link_to 'Login', login_path, class: 'nav-link' %>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to 'Sign Up', signup_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <% if signed_in? %>
          <%= link_to 'Manage Events', manage_path, class: 'nav-link' %>
        <% end %>
      </li>
    </ul>
  </nav>  

<%= yield %>

<% if flash[:success] %>
  <%= javascript_tag do %>
      $.notify("<%= flash[:success] %>", { allow_dismiss: true, type: 'sucess' });
  <% end %>

  <% flash.clear() %>
<% end %>

<% if flash[:error] %>
  <%= javascript_tag do %>
      $.notify("<%= flash[:error] %>", { allow_dismiss: true, type: 'danger' });
  <% end %>    

  <% flash.clear() %>
<% end %>

</body>
</html>
