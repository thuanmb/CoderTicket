<%= render 'manage_events_header' %>
<div class="container-fluid events-list">
    <% @events.in_groups_of(4) do |g| %>
      <div class="row">
        <% g.compact.each do |e| %>
            <%= render partial: 'card', locals: {event: e} %>
        <% end %>
      </div>  
    <% end %>
  </div>
</div>